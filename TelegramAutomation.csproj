<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <Version>1.8.22</Version>
    <Authors>liangjie559567</Authors>
    <Company>TelegramAutomation</Company>
    <Description>Telegram频道自动化下载工具</Description>
    <Copyright>Copyright © 2024</Copyright>
    <PackageProjectUrl>https://github.com/liangjie559567/TelegramAutomation</PackageProjectUrl>
    <RepositoryUrl>https://github.com/liangjie559567/TelegramAutomation.git</RepositoryUrl>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
    <ChromeDriverVersion>122.0.6261.5700</ChromeDriverVersion>
    <StartupObject>TelegramAutomation.Program</StartupObject>
    <EnableDefaultPageItems>false</EnableDefaultPageItems>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Text.Json" Version="6.0.9">
      <NoWarn>NU1903</NoWarn>
    </PackageReference>
    <PackageReference Include="InputSimulator" Version="1.0.4">
      <NoWarn>NU1701</NoWarn>
    </PackageReference>
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="6.0.1" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.1" />
    <PackageReference Include="NLog" Version="5.2.8" />
    <PackageReference Include="NLog.Extensions.Logging" Version="5.3.8" />
    <PackageReference Include="Selenium.WebDriver" Version="4.18.1" />
    <PackageReference Include="Selenium.WebDriver.ChromeDriver" Version="$(ChromeDriverVersion)" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="nlog.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="CopyChromeDriver" AfterTargets="Build">
    <PropertyGroup>
      <ChromeDriverPath>$(NuGetPackageRoot)selenium.webdriver.chromedriver\$(ChromeDriverVersion)\driver\win32\chromedriver.exe</ChromeDriverPath>
      <ChromeDriverTargetPath>$(OutputPath)chromedriver.exe</ChromeDriverTargetPath>
    </PropertyGroup>
    
    <Message Text="正在复制 ChromeDriver..." Importance="high" />
    <Message Text="源路径: $(ChromeDriverPath)" Importance="high" />
    <Message Text="目标路径: $(ChromeDriverTargetPath)" Importance="high" />
    
    <Copy 
      SourceFiles="$(ChromeDriverPath)" 
      DestinationFiles="$(ChromeDriverTargetPath)" 
      SkipUnchangedFiles="true" 
      ContinueOnError="true"
    />
  </Target>

  <Target Name="CopyChromeDriverOnPublish" AfterTargets="Publish">
    <PropertyGroup>
      <ChromeDriverPath>$(NuGetPackageRoot)selenium.webdriver.chromedriver\$(ChromeDriverVersion)\driver\win32\chromedriver.exe</ChromeDriverPath>
      <ChromeDriverPublishPath>$(PublishDir)chromedriver.exe</ChromeDriverPublishPath>
    </PropertyGroup>
    
    <Message Text="正在复制 ChromeDriver 到发布目录..." Importance="high" />
    <Copy 
      SourceFiles="$(ChromeDriverPath)" 
      DestinationFiles="$(ChromeDriverPublishPath)" 
      SkipUnchangedFiles="true" 
      ContinueOnError="true"
    />
  </Target>

  <ItemGroup>
    <Page Include="Views\MainWindow.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>
</Project> 