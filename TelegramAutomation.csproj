<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <Version>1.1.6</Version>
    <Authors>liangjie559567</Authors>
    <Company>TelegramAutomation</Company>
    <Description>Telegram频道自动化下载工具</Description>
    <Copyright>Copyright © 2024</Copyright>
    <PackageProjectUrl>https://github.com/liangjie559567/TelegramAutomation</PackageProjectUrl>
    <RepositoryUrl>https://github.com/liangjie559567/TelegramAutomation.git</RepositoryUrl>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <ApplicationIcon>Resources\app.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="WindowsInput" Version="6.4.1" />
    <PackageReference Include="NLog" Version="5.2.8" />
    <PackageReference Include="Selenium.WebDriver" Version="4.18.1" />
    <PackageReference Include="Selenium.Support" Version="4.18.1" />
    <PackageReference Include="Selenium.WebDriver.ChromeDriver" Version="122.0.6261.9400" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="nlog.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\app.ico" />
  </ItemGroup>

  <!-- 确保 Chrome Driver 被复制到输出目录 -->
  <Target Name="CopyChromeDriver" AfterTargets="Build">
    <ItemGroup>
      <ChromeDriver Include="$(NuGetPackageRoot)\selenium.webdriver.chromedriver\**\driver\win64\chromedriver.exe" />
    </ItemGroup>
    <Copy SourceFiles="@(ChromeDriver)" DestinationFiles="$(OutDir)chromedriver.exe" SkipUnchangedFiles="true" />
  </Target>
</Project> 