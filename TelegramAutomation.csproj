<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <Version>1.4.0</Version>
    <Authors>liangjie559567</Authors>
    <Company>TelegramAutomation</Company>
    <Description>Telegram频道自动化下载工具</Description>
    <Copyright>Copyright © 2024</Copyright>
    <PackageProjectUrl>https://github.com/liangjie559567/TelegramAutomation</PackageProjectUrl>
    <RepositoryUrl>https://github.com/liangjie559567/TelegramAutomation.git</RepositoryUrl>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="InputSimulator" Version="1.0.4" />
    <PackageReference Include="NLog" Version="5.2.8" />
    <PackageReference Include="Selenium.WebDriver" Version="4.18.1" />
    <PackageReference Include="Selenium.Support" Version="4.18.1" />
    <PackageReference Include="Selenium.WebDriver.ChromeDriver" Version="122.0.6261.5700" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="6.0.0" />
    <PackageReference Include="System.Text.Json" Version="8.0.3" />
    <PackageReference Include="WindowsInput" Version="6.4.1" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="nlog.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="CopyChromeDriver" AfterTargets="Build">
    <PropertyGroup>
      <ChromeDriverPath>$(NuGetPackageRoot)selenium.webdriver.chromedriver\122.0.6261.5700\driver\win32\chromedriver.exe</ChromeDriverPath>
    </PropertyGroup>
    <Message Text="正在复制 ChromeDriver..." Importance="high" />
    <Message Text="源路径: $(ChromeDriverPath)" Importance="high" />
    <Message Text="目标路径: $(OutDir)" Importance="high" />
    
    <Error 
      Text="ChromeDriver 文件不存在: $(ChromeDriverPath)" 
      Condition="!Exists('$(ChromeDriverPath)')"
    />
    
    <Copy 
      SourceFiles="$(ChromeDriverPath)" 
      DestinationFolder="$(OutDir)" 
      SkipUnchangedFiles="true" 
    />
    
    <Message 
      Text="ChromeDriver 复制成功" 
      Importance="high" 
      Condition="Exists('$(OutDir)chromedriver.exe')"
    />
  </Target>
</Project> 