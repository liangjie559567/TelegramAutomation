<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

    <targets>
        <!-- 文件日志 -->
        <target xsi:type="File" name="file" 
                fileName="${basedir}/logs/${shortdate}.log"
                layout="${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:inner=${newline}${exception:format=tostring}}" />
        
        <!-- 错误日志 -->
        <target xsi:type="File" name="errorfile" 
                fileName="${basedir}/logs/errors/${shortdate}.log"
                layout="${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:inner=${newline}${exception:format=tostring,Data}}" />
        
        <!-- 调试日志 -->
        <target xsi:type="File" name="debugfile" 
                fileName="${basedir}/logs/debug/${shortdate}.log"
                layout="${longdate}|${level:uppercase=true}|${logger}|${message}" />
        
        <!-- 控制台输出 -->
        <target xsi:type="Console" name="console"
                layout="${time}|${level:uppercase=true}|${message}" />
    </targets>

    <rules>
        <!-- 错误日志规则 -->
        <logger name="*" minlevel="Error" writeTo="errorfile" />
        
        <!-- 调试日志规则 -->
        <logger name="*" levels="Debug,Trace" writeTo="debugfile" />
        
        <!-- 所有日志规则 -->
        <logger name="*" minlevel="Info" writeTo="file,console" />
    </rules>
</nlog> 