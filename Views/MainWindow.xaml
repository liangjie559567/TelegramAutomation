<Window x:Class="TelegramAutomation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:TelegramAutomation.ViewModels"
        Title="Telegram自动化下载工具" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 登录面板 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <DockPanel Margin="0,5">
                <TextBlock Text="手机号码:" Width="120"/>
                <Button Content="获取验证码" Width="100" DockPanel.Dock="Right" Margin="5,0,0,0"
                        Command="{Binding RequestCodeCommand}"/>
                <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"/>
            </DockPanel>
            <DockPanel Margin="0,5">
                <TextBlock Text="验证码:" Width="120"/>
                <Button Content="登录" Width="100" DockPanel.Dock="Right" Margin="5,0,0,0"
                        Command="{Binding LoginCommand}"/>
                <TextBox Text="{Binding VerificationCode, UpdateSourceTrigger=PropertyChanged}"/>
            </DockPanel>
        </StackPanel>

        <!-- 配置面板 -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <DockPanel Margin="0,5">
                <TextBlock Text="Telegram频道URL:" Width="120"/>
                <TextBox Text="{Binding ChannelUrl}"/>
            </DockPanel>
            <DockPanel Margin="0,5">
                <TextBlock Text="下载保存路径:" Width="120"/>
                <Button Content="浏览" Width="60" DockPanel.Dock="Right" Margin="5,0,0,0"
                        Command="{Binding BrowseFolderCommand}"/>
                <TextBox Text="{Binding SavePath}"/>
            </DockPanel>
        </StackPanel>

        <!-- 控制按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="开始" Width="80" Command="{Binding StartCommand}" Margin="0,0,10,0"/>
            <Button Content="停止" Width="80" Command="{Binding StopCommand}"/>
        </StackPanel>

        <!-- 日志显示 -->
        <TextBox Grid.Row="2" Text="{Binding LogContent, Mode=OneWay}"
                 IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"/>

        <!-- 状态栏 -->
        <StatusBar Grid.Row="3">
            <TextBlock Text="{Binding Status}"/>
        </StatusBar>
    </Grid>
</Window> 