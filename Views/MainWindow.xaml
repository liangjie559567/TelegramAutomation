<Window x:Class="TelegramAutomation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Telegram 自动化下载工具" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 登录区域 -->
        <GroupBox Grid.Row="0" Header="登录" Margin="0,0,0,10" Padding="10">
            <StackPanel>
                <DockPanel Margin="0,5">
                    <Label Content="手机号码:" Width="80"/>
                    <TextBox x:Name="PhoneNumberTextBox"
                             IsEnabled="True"
                             Background="White"
                             Foreground="Black"
                             BorderBrush="#FFABADB3"
                             BorderThickness="1"
                             Padding="5,3"
                             TextWrapping="NoWrap"
                             VerticalContentAlignment="Center"
                             Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"/>
                </DockPanel>
                
                <DockPanel Margin="0,5">
                    <Label Content="验证码:" Width="80"/>
                    <TextBox x:Name="VerificationCodeTextBox"
                             IsEnabled="True"
                             Background="White"
                             Foreground="Black"
                             BorderBrush="#FFABADB3"
                             BorderThickness="1"
                             Padding="5,3"
                             TextWrapping="NoWrap"
                             VerticalContentAlignment="Center"
                             Text="{Binding VerificationCode, UpdateSourceTrigger=PropertyChanged}"/>
                </DockPanel>
                
                <!-- 添加登录状态提示 -->
                <TextBlock x:Name="LoginStatusText" 
                          Text="{Binding LoginStatusMessage}"
                          Margin="0,5"
                          Foreground="{Binding LoginStatusColor}"
                          TextWrapping="Wrap"/>
                
                <!-- 添加进度条 -->
                <ProgressBar x:Name="LoginProgressBar"
                            Height="2"
                            Margin="0,5"
                            IsIndeterminate="{Binding IsLoggingIn}"/>
            </StackPanel>
        </GroupBox>

        <!-- 下载配置区域 -->
        <GroupBox Grid.Row="1" Header="下载配置" Margin="0,0,0,10" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <DockPanel Grid.Row="0" Margin="0,5">
                    <Label Content="频道链接:" Width="80"/>
                    <TextBox x:Name="ChannelLinkTextBox"
                             IsEnabled="True"
                             Background="White"
                             Foreground="Black"
                             BorderBrush="#FFABADB3"
                             BorderThickness="1"
                             Padding="5,3"
                             TextWrapping="NoWrap"
                             VerticalContentAlignment="Center"
                             Text="{Binding ChannelUrl, UpdateSourceTrigger=PropertyChanged}"/>
                </DockPanel>
                
                <DockPanel Grid.Row="1" Margin="0,5">
                    <Label Content="保存路径:" Width="80"/>
                    <TextBox x:Name="SavePathTextBox"
                             IsEnabled="True"
                             Background="White"
                             Foreground="Black"
                             BorderBrush="#FFABADB3"
                             BorderThickness="1"
                             Padding="5,3"
                             TextWrapping="NoWrap"
                             VerticalContentAlignment="Center"
                             Text="{Binding SavePath, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,5,0"/>
                    <Button x:Name="BrowseButton" Content="浏览" Width="100"/>
                </DockPanel>
            </Grid>
        </GroupBox>

        <!-- 下载列表区域 -->
        <GroupBox Grid.Row="2" Header="下载列表" Margin="0,0,0,10" Padding="10">
            <ListView x:Name="DownloadListView" ItemsSource="{Binding DownloadItems}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="文件名" Width="300">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding FileName}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="大小" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding FileSizeDisplay}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="进度" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <ProgressBar Value="{Binding Progress}" Maximum="100" Height="20"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="状态" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Status}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="操作" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="{Binding IsPaused, Converter={StaticResource BoolToPauseTextConverter}}"
                                                Command="{Binding DataContext.PauseItemCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding}"
                                                Width="70" Margin="0,0,5,0"/>
                                        <Button Content="取消"
                                                Command="{Binding DataContext.CancelItemCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding}"
                                                Width="70"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <!-- 控制按钮区域 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="StartButton" Content="开始下载" Width="100" Margin="10,0"/>
            <Button x:Name="PauseButton" Content="暂停" Width="100" Margin="10,0"/>
            <Button x:Name="StopButton" Content="停止" Width="100" Margin="10,0"/>
        </StackPanel>

        <!-- 状态栏 -->
        <StatusBar Grid.Row="3" HorizontalAlignment="Left" Width="Auto">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="就绪"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window> 